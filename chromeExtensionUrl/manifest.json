{
  "manifest_version": 3,
  "name": "URL Content Tracker",
  "version": "1.0",
  "description": "열린 탭과 그 내용을 추적합니다",
  "permissions": [
    "activeTab",
    "sidePanel",
    "scripting",
    "tabs",
    "downloads",
    "windows",
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://*/*",
    "chrome-extension://*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "blocked.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "popup.html"
  }
}
